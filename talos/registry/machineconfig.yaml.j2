---
# yaml-language-server: $schema=https://raw.githubusercontent.com/siderolabs/talos/refs/heads/release-1.11/website/content/v1.11/schemas/config.schema.json
version: v1alpha1
machine:
  ca:
    crt: op://homelab/talos-registry/MACHINE_CA_CRT
    {% if machinetype == 'controlplane' %}
    key: op://homelab/talos-registry/MACHINE_CA_KEY
    {% endif %}
  certSANs:
    - 127.0.0.1
    - 192.168.20.66
  features:
    apidCheckExtKeyUsage: true
    diskQuotaSupport: true
    hostDNS:
      enabled: true
      forwardKubeDNSToHost: false
      resolveMemberNames: true
    kubePrism:
      enabled: true
      port: 7445
    {% if machinetype == 'controlplane' %}
    kubernetesTalosAPIAccess:
      allowedKubernetesNamespaces:
        - actions-runner-system
        - system-upgrade
      allowedRoles:
        - os:admin
      enabled: true
    {% endif %}
    rbac: true
    stableHostname: true
  files:
    - op: create
      path: /etc/cri/conf.d/20-customization.part
      permissions: 0o644
      content: |
        [plugins."io.containerd.cri.v1.images"]
          discard_unpacked_layers = false
        [plugins."io.containerd.cri.v1.runtime"]
          cdi_spec_dirs = ["/var/cdi/static", "/var/cdi/dynamic"]
          device_ownership_from_security_context = true
    - op: overwrite
      path: /etc/nfsmount.conf
      permissions: 0o644
      content: |
        [ NFSMount_Global_Options ]
        nfsvers=4.2
        hard=True
        nconnect=16
        noatime=True
        rsize=1048576
        wsize=1048576
  install:
    image: factory.talos.dev/metal-installer/ecd7f2ca59a064a6cb0c0bbb41ec1d1e017b3d034315c0efc1ac19947e7b6fc4:v1.12.4
    wipe: false
  kubelet:
    defaultRuntimeSeccompProfileEnabled: true
    disableManifestsDirectory: true
    extraConfig:
      featureGates:
        ImageVolume: true
      serializeImagePulls: false
    extraMounts:
      - destination: /var/mnt/extra
        options: ["bind", "rshared", "rw"]
        source: /var/mnt/extra
        type: bind
    image: ghcr.io/siderolabs/kubelet:v1.35.2
    nodeIP:
      validSubnets:
        - 192.168.20.0/24
  network:
    nameservers:
      - 192.168.10.6
      - 192.168.10.7
    searchDomains:
      - op://homelab/talos-registry/private_static_domain
  nodeLabels:
    topology.kubernetes.io/region: registry
  sysctls:
    fs.inotify.max_user_instances: "8192"      # Watchdog
    fs.inotify.max_user_watches: "1048576"     # Watchdog
    net.core.rmem_max: "7500000"               # Cloudflared / QUIC
    net.core.wmem_max: "7500000"               # Cloudflared / QUIC
    net.ipv4.neigh.default.gc_thresh1: "4096"  # Prevent ARP cache overflows
    net.ipv4.neigh.default.gc_thresh2: "8192"  # Prevent ARP cache overflows
    net.ipv4.neigh.default.gc_thresh3: "16384" # Prevent ARP cache overflows
    net.ipv4.ping_group_range: 0 2147483647    # Allow Ping
    net.ipv4.tcp_fastopen: "3"                 # Send and accept data in the opening SYN packet
    net.ipv6.conf.all.autoconf: "0"            # disable IPv6 autoconfig
    net.ipv6.conf.default.autoconf: "0"        # disable IPv6 autoconfig
    net.ipv6.conf.eno1.autoconf: "0"           # disable IPv6 autoconfig
    user.max_user_namespaces: "11255"          # User Namespaces
  time:
    disabled: false
    servers:
      - 192.168.10.3
      - 192.168.10.11
  token: op://homelab/talos-registry/MACHINE_TOKEN
cluster:
  ca:
    crt: op://homelab/talos-registry/CLUSTER_CA_CRT
    {% if machinetype == 'controlplane' %}
    key: op://homelab/talos-registry/CLUSTER_CA_KEY
    {% endif %}
  clusterName: registry
  controlPlane:
    endpoint: https://192.168.20.66:6443
  discovery:
    enabled: true
    registries:
      kubernetes:
        disabled: true
      service:
        disabled: false
  id: op://homelab/talos-registry/CLUSTER_ID
  network:
    cni:
      name: none
    dnsDomain: cluster.local
    podSubnets:
      - 10.42.0.0/16
    serviceSubnets:
      - 10.43.0.0/16
  secret: op://homelab/talos-registry/CLUSTER_SECRET
  token: op://homelab/talos-registry/CLUSTER_TOKEN
  {% if machinetype == 'controlplane' %}
  aggregatorCA:
    crt: op://homelab/talos-registry/CLUSTER_AGGREGATORCA_CRT
    key: op://homelab/talos-registry/CLUSTER_AGGREGATORCA_KEY
  allowSchedulingOnControlPlanes: true
  apiServer:
    auditPolicy:
      apiVersion: audit.k8s.io/v1
      kind: Policy
      rules:
        - level: Metadata
    certSANs:
      - 192.168.20.66
      - 127.0.0.1
    disablePodSecurityPolicy: true
    extraArgs:
      enable-aggregator-routing: "true"
      feature-gates: ImageVolume=true
    image: registry.k8s.io/kube-apiserver:v1.35.2
  controllerManager:
    extraArgs:
      bind-address: 0.0.0.0
    image: registry.k8s.io/kube-controller-manager:v1.35.2
  coreDNS:
    disabled: true
  etcd:
    advertisedSubnets:
      - 192.168.20.0/24
    ca:
      crt: op://homelab/talos-registry/CLUSTER_ETCD_CA_CRT
      key: op://homelab/talos-registry/CLUSTER_ETCD_CA_KEY
    extraArgs:
      listen-metrics-urls: http://0.0.0.0:2381
  proxy:
    disabled: true
    image: registry.k8s.io/kube-proxy:v1.35.2
  scheduler:
    config:
      apiVersion: kubescheduler.config.k8s.io/v1
      kind: KubeSchedulerConfiguration
      profiles:
        - schedulerName: default-scheduler
          plugins:
            score:
              disabled:
                - name: ImageLocality
          pluginConfig:
            - name: PodTopologySpread
              args:
                defaultingType: List
                defaultConstraints:
                  - maxSkew: 1
                    topologyKey: kubernetes.io/hostname
                    whenUnsatisfiable: ScheduleAnyway
    extraArgs:
      bind-address: 0.0.0.0
    image: registry.k8s.io/kube-scheduler:v1.35.2
  secretboxEncryptionSecret: op://homelab/talos-registry/CLUSTER_SECRETBOXENCRYPTIONSECRET
  serviceAccount:
    key: op://homelab/talos-registry/CLUSTER_SERVICEACCOUNT_KEY
  {% endif %}
---
apiVersion: v1alpha1
kind: VolumeConfig
name: EPHEMERAL
provisioning:
  maxSize: 32Gi
---
apiVersion: v1alpha1
kind: UserVolumeConfig
name: extra
provisioning:
  diskSelector:
    match: system_disk
  grow: true
  minSize: 64Gi
  maxSize: 96Gi
filesystem:
  type: xfs
---
apiVersion: v1alpha1
kind: WatchdogTimerConfig
device: /dev/watchdog0
timeout: 5m
---
# attempt to reduce / disable the broken Talos OOM "feature"
apiVersion: v1alpha1
kind: OOMConfig
triggerExpression: "false"
cgroupRankingExpression: "0.0"
sampleInterval: "5s"
